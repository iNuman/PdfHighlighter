            android:drawableStart="@drawable/slider_vertical"
            android:drawableEnd="@drawable/circle_un_selector"
            android:drawablePadding="@dimen/_17sdp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_25sdp"
            android:paddingVertical="@dimen/_15sdp"
            android:text="continue scroll"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vertical_mode_btn" />
    -->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/continue_scroll_btn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:drawablePadding="25dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_25sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="Continue Scroll"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vertical_mode_btn" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:paddingHorizontal="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="@id/continue_scroll_btn"
        app:layout_constraintEnd_toEndOf="@id/continue_scroll_btn"
        app:layout_constraintTop_toTopOf="@id/continue_scroll_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>
